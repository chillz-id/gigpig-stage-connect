# Supabase Configuration
# Get these from your Supabase project settings
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Maps Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Required APIs: Maps JavaScript API, Places API, Geocoding API
# IMPORTANT: Restrict this key to your domain(s) only!
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
VITE_APP_URL=http://localhost:8080
VITE_ENVIRONMENT=development

# OAuth Redirect URLs (must match Supabase configuration)
VITE_OAUTH_REDIRECT_URL=http://localhost:8080/auth/callback

# Email Configuration (Resend)
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key
VITE_RESEND_FROM_EMAIL=team@yourdomain.com

# Filestash Media Library Configuration
# Required for the Media Library feature with Filestash integration
# See: docker-compose.filestash.yml

# Filestash session secret (used to sign JWT tokens for file access)
FILESTASH_SESSION_SECRET=your_filestash_session_secret

# Supabase S3 Storage credentials
# Get these from: Supabase Dashboard → Storage → S3 Access Keys
SUPABASE_PROJECT_REF=your_project_ref
SUPABASE_S3_ACCESS_KEY=your_s3_access_key
SUPABASE_S3_SECRET_KEY=your_s3_secret_key
SUPABASE_STORAGE_BUCKET=media-library

# Supabase Service Role Key (for auth gateway)
# Get from: Supabase Dashboard → Settings → API
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Filestash URL (where the Docker Filestash instance is running)
VITE_FILESTASH_URL=http://localhost:8090/filestash

# Meta/Facebook Marketing API Configuration
# Required for Custom Audiences and Conversions API integration
# Get from: Business Settings → System Users → Generate Token
# Required permissions: ads_management, ads_read, business_management
META_ACCESS_TOKEN=your_meta_access_token

# Ad Account ID (format: act_123456789)
# Get from: Ads Manager → Account dropdown
META_AD_ACCOUNT_ID=act_your_ad_account_id

# Pixel ID for Conversions API
# Get from: Events Manager → Data Sources → Your Pixel
META_PIXEL_ID=your_pixel_id

# Custom Audience ID for customer list uploads
# Create in: Ads Manager → Audiences → Create Audience → Customer List
META_CUSTOM_AUDIENCE_ID=your_custom_audience_id